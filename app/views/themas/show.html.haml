      .past__thema 
        %i.fa.fa-arrow-circle-left
        aaa vs bbb
      .next__thema 
        111 vs 222
        %i.fa.fa-arrow-circle-right
        

    .body__header
      .body__header__box
        .body__header__box__panel
          .body__header__box__panel__top
            .body__header__box__panel__top--firstName マクドナルド
            .body__header__box__panel__top--vs vs
            .body__header__box__panel__top--secondName スターバックス
          .body__header__box__panel__bottom
            .facebook
            %i.fa.fa-facebook 
            .twitter
